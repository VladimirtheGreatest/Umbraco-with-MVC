@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<UmbracoWithMvc.Models.BlogOverViewModel>
@{
    Layout = "Master.cshtml";
}

<div role="content">
	<h1 class="text-center">@ViewBag.Hello</h1>
	<section class="light blogarchive equalizer">
		<div class="container">

			<div class="row">
				@foreach(var post in Model.Content.Posts) 
				{
					<div class="col-sm-6">
						<div class="content equal">
							<a href="@post.Url">
								<div class="date">@post.CreateDate.ToLongDateString()</div>
								<h2>@post.Name</h2>		
								<p>@post.Introduction</p>
							</a>
						</div>
					</div>
				}
			</div>
		</div>
	</section>

</div>